<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Drink_Tracker"
    xmlns:SampleData="using:Blend.SampleData.AccountsSampleDataSource" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
    x:Class="Drink_Tracker.App"
    RequestedTheme="Light">

    <Application.Resources>
        <GridLength x:Key="HeaderHeight">80</GridLength>
        <GridLength x:Key="SearchBarHeight">64</GridLength>
        <Style x:Key="ListViewItemBackground" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        <Style x:Key="HeaderBackground" TargetType="Border">
            <Setter Property="Background" Value="LightSalmon"/>
        </Style>
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontWeight" Value="SemiLight"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </Application.Resources>
    

</Application>
